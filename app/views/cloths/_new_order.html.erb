<%= simple_form_for [@cloth, @order] do |f| %>
              <%= f.error_notification %>
              <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
                <div class="form-inputs d-flex justify-content-start ml-4">
                  <%= f.input :quantity, collection: 1..@cloth.stock, include_blank: false %>
                </div>
                <div class="form-actions d-flex justify-content-start pb-5">
                  <%= f.button :submit, class: 'btn btn-outline-success btn-lg' %>
                </div>
            <% end %>
