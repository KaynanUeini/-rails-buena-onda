<div class="container">
  <p style="text-align: end;"><%= @cloths.count %> resultados encontrados.</p>
  <div class="content-wrapper">
    <div class="row">
      <%= @cloths.each do |cloth| %>
      <%= link_to cloth_path(cloth) do %>
      <div class="col-lg-3 col-md-4 col-sm-6 mt-5">
        <div class="card-photo-w-100">
          <%= image_tag "https://img.lojasrenner.com.br/item/548719715/medium/9.jpg", class: "front-d-block-w-100", style: "height: 371px; width: 299px; background-size: cover;" %>
          <%= image_tag "https://img.lojasrenner.com.br/item/548719715/medium/1.jpg", class: "back-d-block-w-100", style: "height: 371px; width: 299px; background-size: cover;" %>
        </div>
        <div class="card-body">
          <p class="card-text">
            <p class="p-brand"><%= cloth.brand.capitalize %></p>
            <p class="p-name" style="text-align: center"><%= cloth.name.capitalize %></p>
            <% end %>
            <p>Index</p>
            <div class="row" style="margin: auto; float: none;">
              <% if cloth.stock == 0 %>
              <p class="stock">Produto esgotado</p>
              <% else %>
              <% if cloth.price2.nil? == false %>
              <p class="price1">R$ <%= cloth.price1 %></p>
              <p class="price2">R$ <%= cloth.price2 %></p>
              <% else %>
              <p class="price1-normal" style="margin: auto;">R$ <%= cloth.price1 %></p>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

